@{
    String logo = "/img/blue_logo.png";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PatientConnect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/root.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PatientConnect.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/nav.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/modal.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
           <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="patientconnectlogo" src="@logo" />
                </a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="HowItWorks">How It Works</a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                @{
                    var loggedIn = Context.Session.GetInt32("UserID").HasValue;
                }
                <div class="flex-end">
                    @if(!loggedIn){
                        <button type="button" class="loginbutton" data-toggle="modal" data-target="#loginModal">
                            Login
                        </button>
                        <button type="button" class="registerbutton" data-toggle="modal" data-target="#registerModal">
                            Register
                        </button>
                    } else {
                        <button type="button" class="registerbutton" onclick="location.href='@Url.Action("Logout", "Login")'">
                           Logout 
                        </button>
                    }
                </div>
                <!-- Login Modal -->
                <div class="modal fade" id="loginModal" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <partial name="../Login/Login.cshtml"></partial>
                        </div><!-- modal-content-->
                    </div><!-- modal-dialog-->
                </div><!-- loginModal -->

                <!-- Register Modal -->
                <div class="modal fade" id="registerModal" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <partial name="../Register/Register.cshtml"></partial>
                        </div><!-- modal-content-->
                    </div><!-- modal-dialog-->
                </div><!-- registerModal -->
            </div>
        </nav>
    </header>
    @* <div class="container"> *@
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    @* </div> *@

    <footer>
        <banner>
            <bannertext>
                <h2>PatientConnect</h2>
                Your Health, Our Connection<br />
            </bannertext>
            <bannertext>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="HowItWorks">How It Works</a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="">Terms of Service</a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="">Privacy Policy</a>
            </banner>
        </banner>
        <socialmedia>
            <a>Facebook</a>
            <a>X</a>
            <a>Instagram</a>
            <a>LinkedIn</a>
            <p>&copy; 2024 - PatientConnect, All Rights Reserved</p>
        </socialmedia>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
