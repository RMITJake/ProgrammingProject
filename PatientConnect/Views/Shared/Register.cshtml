@model User

<div class="modal-grid">
    <div class="modal-header">
        @* <button type="button" class="close" data-dismiss="modal">&times;</button> *@
        <h4 class="modal-title">Register</h4>
        <subtiltle>or Login</subtiltle>
    </div><!-- modal-header-->
    <div class="modal-left">image</div><!-- modal-left-->
    <div class="modal-right">
        <form asp-action="Register" asp-controller="Register">
            <div class="form-group">
                @* <label for="Name">Full name</label> *@
                <input asp-for="Name" class="form-control" placeholder="Full Name">
            </div>
            <div class="form-group">
                @* <label asp-for="Email">Email</label> *@
                <input asp-for="Email" class="form-control" placeholder="Email">
            </div>
            <div class="form-group">
                @* <label asp-for="City">City</label> *@
                <input asp-for="City" class="form-control" placeholder="City">
            </div>
            <div class="form-group">
                @* <label asp-for="PostCode">Post Code</label> *@
                <input asp-for="PostCode" class="form-control" placeholder="Post Code">
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-success">
            </div>
        </form>
    </div><!-- modal-right-->
</div>